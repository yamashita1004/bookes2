 <div>
  <%= flash[:notice] %>
</div>
<div class="container px- px-sm-0">
     <div class="row">
        <%= render 'books/list',books: @books %>
        <div class= "col-md-8 offset-md-1">
          <h2>Book detail</h2>
            <table class='table table-hover table-inverse'>

               <tr>
                  <th></th>
                   <th>Title</th>
                     <th>Opinion</th>
                        <th colspan="3"></th>
                           </tr>
                             <% @books.each do |book| %>
                                 <tr>
                                  <td>
                                     <%= link_to user_path(book.user.id) do %>
                                       <%= image_tag book.user.get_profile_image(100,100), size: "100x100" %></br>
                                          <% end %>
  
                                      <td><%=link_to book.title, book_path(book.id)%></td>
                                           <td><%= book.body %></td>
                                             </tr>
                               <% end %>
                 </table>
        </div>
      </div>
    </div>
