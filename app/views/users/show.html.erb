 <div>
  <%= flash[:notice] %>
</div>
<div class="container">
     <div class="row">
        <%= render 'books/list',books: @books %>
        <div class= "col-md-8 affset-md1">
 <h2>Book detail</h2>
<table class='table table-hover table-inverse'>

      <tr>
      <th></th>
